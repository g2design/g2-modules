<div class="panel col-md-8 col-md-offset-2">

	<div class="panel-heading">
		Post
	</div>
	<form action="" method="post" enctype="multipart/form-data">
		<div class="panel-body">
			{% for field in fields %}

				<label for="">{{ field.name }}</label>
				{% if field.type == 'text' %}
					<input type="text" name="{{ field.name }}" class="form-control" data-default='false'>
				{% elseif field.type == 'fileupload' %}
					<input type="file" name="{{ field.name }}" class="form-control" data-default='false'>
				
				{% elseif field.type == 'datetime' %}
					<input type="datetime"  name="{{ field.name }}" class="form-control datepicker" data-default='false'>
					
				{% elseif field.type == 'textarea' %}
					<textarea type="file" name="{{ field.name }}" class="form-control editor" data-default='false'></textarea>
					
				{% else %}
					<input type="text" name="{{ field.name }}" class="form-control">
				{% endif %}
			{% endfor %}
		</div>

		<div class="panel-footer">
			<input type="submit" class="btn btn-default" value='Save'>
		</div>
	</form>
</div>