<div class="col-md-6">
	<div class="panel">
		<div class="panel-heading">
			<span class="panel-title">{{ list.name }}</span>
		</div>
		<form class="form-inline" method="POST" >
			<div class="panel-body">
				{% for key, address in addresses %}

				<div class="address">
					<div class="form-group">
						<label class="sr-only" for="email">Email address</label>
						<input data-name="email" name="email[{{key}}]" value="{{ address.email }}" type="email" class="form-control" placeholder="Enter email" autocomplete="off" style="cursor: auto;  background-attachment: scroll; background-position: 100% 50%; background-repeat: no-repeat;">
					</div>
					<div class="form-group">
						<label class="sr-only" for="exampleInputPassword2">Name</label>
						<input data-name="name" name="name[{{key}}]" value="{{ address.name }}" type="text" class="form-control" placeholder="Full Name" autocomplete="off" style="cursor: auto; background-attachment: scroll; background-position: 100% 50%; background-repeat: no-repeat;">
					</div>
					<div class="form-group">
						<button class="btn btn-danger remove">Remove</button>
					</div>
				</div>
				{% endfor %}
			</div>
			<div class="panel-footer">
				<button class="btn btn-default add-another" data-container=".form-inline .panel-body " data-object=".address">Add Another</button>
				<button type="submit" class="btn btn-primary">Sign In</button>
			</div>
		</form>
	</div>
</div>

<script>
	$(document).ready(function() {
		$('.address').first().find('.remove').hide();
		$('.add-another').click(function(event) {
			event.preventDefault();
			var container = $(this).data('container');
			var object = $(this).data('object');
			var object = $(object).first().clone();
			object.find('input').val('');
			object.find('.remove').show();
			object.appendTo(container);
		});
		
		$(document).on('click','.remove',function(event) {
			event.preventDefault();
			$(this).parents('.address').remove();
		});
		
	});
</script>